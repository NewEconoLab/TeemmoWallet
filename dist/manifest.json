{
    "manifest_version": 2,
    "name": "Teemo Wallet",
    "description":
        "A boilerplate project to quickly build a Chrome extension using TypeScript and React (built using webpack).",
    "version": "1.0.0",

    "browser_action": {
        "default_title": "NELPluginWallet",
        "default_icon": "icon16.png",
        "default_popup": "index.html"
    },
    "web_accessible_resources": [
        "js/inject.js"
    ],
    "background": {
        "scripts": [
            "lib/neo-thinsdk.min.js",
            "js/account.js",
            "js/background.js"
        ],
        "persistent": true
    },
    "permissions": [
        "notifications",
        "storage",
        "tabs",
        "http://*/*",
        "https://*/*"  
    ],
    "content_scripts": [
      {
        "matches": [         
          "http://*/*",
          "https://*/*" 
        ], 
        "js": [ "js/content.js" ]
      }
    ],
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    }
}

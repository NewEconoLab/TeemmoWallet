{
  "name": "chrome-extension-react-typescript-boilerplate",
  "version": "1.0.0",
  "description": "A boilerplate project to quickly build a Chrome extension using TypeScript and React (built using webpack).",
  "scripts": {
    "build": "webpack --config webpack.prod.js --watch",
    "dev": "webpack-dev-server --inline --progress --config webpack.dev.js",
    "watch": "webpack -w --config webpack.dev.js",
    "lint": "tslint 'src/**/*.{ts, tsx}'",
    "server": "webpack-dev-server --config webpack.dev.js --watch --color --port 8080"
  },
  "author": "Joe Martella",
  "license": "MIT",
  "devDependencies": {
    "@types/chrome": "0.0.60",
    "@types/classnames": "^2.2.7",
    "@types/react": "^16.0.40",
    "@types/react-dom": "^16.0.4",
    "@types/react-router-dom": "^4.3.1",
    "css-loader": "^0.28.11",
    "less": "^3.9.0",
    "less-loader": "^4.1.0",
    "node-sass": "^4.7.2",
    "sass-loader": "^6.0.7",
    "scss-loader": "0.0.1",
    "style-loader": "^0.20.3",
    "ts-loader": "^4.0.1",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-react": "^3.6.0",
    "typescript": "^2.7.2",
    "webpack": "^4.1.1",
    "webpack-cli": "^3.1.1",
    "webpack-merge": "^4.1.4"
  },
  "dependencies": {
    "awesome-typescript-loader": "^5.2.1",
    "axios": "^0.18.0",
    "babel-loader": "^8.0.5",
    "classnames": "^2.2.6",
    "mobx": "^5.9.0",
    "mobx-react": "^5.4.3",
    "nel-neo-thinsdk": "0.0.9",
    "neo-thinsdk-ts-nodejs": "^1.0.1",
    "peer": "^0.2.10",
    "react": "^16.2.0",
    "react-dom": "^16.8.4",
    "react-router": "^4.3.1",
    "react-router-config": "^4.4.0-beta.6",
    "react-router-dom": "^4.3.1",
    "tslint-loader": "^3.5.4",
    "url-loader": "^1.1.2",
    "webpack-dev-server": "^3.1.14"
  }
}
